{
  "name": "tester",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "start": "react-native start",
    "postinstall": "patch-package && npm run install-rn-harmony",
    "install-rn-harmony": "cd ../react-native-harmony && npm pack && cd ../tester && npm uninstall react-native-harmony && npm i ../react-native-harmony/react-native-harmony-0.0.1.tgz",
    "bundle": "metro build index.js --platform harmony --out bundle.harmony.js --config metro.config.js --minify false",
    "bundle:clean": "npm run install-rn-harmony && npm run bundle",
    "sync:native": "node ./updateNative.js bundle.harmony.js ../native/tester/src/main/cpp/jsbundle.h assets ../native/tester/src/main/ets/assets/assets",
    "patch:rn": "patch-package react-native",
    "dev": "npm run bundle:clean && npm run sync:native && npm run patch:rn",
    "dev:fast": "npm run bundle && npm run sync:native"
  },
  "dependencies": {
    "chai": "^4.3.7",
    "react": "18.2.0",
    "react-native": "0.71.3",
    "react-native-harmony": "file:../react-native-harmony/react-native-harmony-0.0.1.tgz"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "@tsconfig/react-native": "^2.0.2",
    "@types/chai": "^4.3.4",
    "@types/jest": "^29.2.1",
    "@types/metro-config": "^0.76.2",
    "@types/react": "^18.0.24",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.2.1",
    "eslint": "^8.19.0",
    "fs-extra": "^11.1.1",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.73.9",
    "patch-package": "^6.5.1",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "typescript": "4.8.4"
  },
  "jest": {
    "preset": "react-native"
  }
}
