{
  "name": "react-native-harmony-test",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "preinstall": "cd ../react-native-harmony && npm run pack:dev && cd ../tester",
    "postinstall": "npm uninstall react-native-harmony && npm i ../react-native-harmony/react-native-harmony-0.0.1.tgz",
    "bundle:js:project": "metro build index.js --platform harmony --out bundle.harmony.js --config metro.config.js --minify false",
    "bundle:js:rn": "npm i && npm run bundle:js:project",
    "bundle:native": "node ./bundleProject.js bundle.harmony.js ./harmony/entry/src/main/cpp/jsbundle.h assets ./harmony/entry/src/main/ets/assets/assets",
    "dev:rn": "npm run bundle:js:rn && npm run bundle:native",
    "dev": "npm run bundle:js:project && npm run bundle:native"
  },
  "dependencies": {
    "chai": "^4.3.7",
    "react": "18.2.0",
    "react-native": "0.71.3",
    "react-native-harmony": "file:../react-native-harmony/react-native-harmony-0.0.1.tgz"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "@tsconfig/react-native": "^2.0.2",
    "@types/chai": "^4.3.4",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.2.1",
    "@types/metro-config": "^0.76.2",
    "@types/react": "^18.0.24",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.2.1",
    "eslint": "^8.19.0",
    "fs-extra": "^11.1.1",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.73.9",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "typescript": "4.8.4"
  },
  "jest": {
    "preset": "react-native"
  }
}
