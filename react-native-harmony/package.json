{
  "name": "@rnoh/react-native-harmony",
  "version": "0.75.2",
  "description": "",
  "scripts": {
    "install:local-cli": "cd ../react-native-harmony-cli && npm pack && cd ../react-native-harmony && npm i ../react-native-harmony-cli/rnoh-react-native-harmony-cli-0.0.25.tgz && cd ../react-native-harmony",
    "prepublishOnly": "npm run _verify",
    "build:hermes": "sh ./scripts/build-hermes.sh",
    "build:har": "node ./scripts/build-har.js",
    "update:version": "node ./scripts/update-version.js",
    "gen:changelog": "node ./scripts/generate-changelog.js",
    "deploy": "node ./scripts/deploy.js",
    "_verify": "npm run check_if_plugin_included && react-native verify-package-harmony --package-path . --skip-checks 'oh_package_name_is_derived_from_npm_package_name;harmony_directory_contains_only_one_har_file' && npm run _verify:ecosystem",
    "_verify:ecosystem": "npm pack && cd ../tester-ecosystem && npm run install:react_native_harmony && npm install && npm run build",
    "check_if_plugin_included": "test $(ls ./harmony/*.tgz 2>/dev/null | wc -l) -eq 1",
    "test": "jest"
  },
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react-native": "0.75.4"
  },
  "types": "types",
  "devDependencies": {
    "@react-native-community/cli": "^11.2.0",
    "@react-native-community/cli-types": "^11.2.0",
    "@react-native/metro-config": "0.75.4",
    "@react-native/typescript-config": "0.75.4",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.16.0",
    "@types/react": "^18.2.24",
    "@types/tmp": "^0.2.6",
    "jest": "^29.5.0",
    "json5": "^2.2.3",
    "rimraf": "^5.0.0",
    "tmp": "^0.2.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "metro-config": "0.80.12"
  },
  "files": [
    "./Libraries/**/*",
    "./types/**/*",
    "./*.js",
    "./*.json",
    "./harmony/*"
  ],
  "dependencies": {
    "@rnoh/react-native-harmony-cli": "^0.75.3",
    "colors": "^1.4.0",
    "fs-extra": "^11.1.1",
    "metro-runtime": "0.80.12",
    "metro-source-map": "0.80.12"
  },
  "harmony": {
    "autolinking": null
  },
  "engines": {
    "node": ">=18"
  }
}
